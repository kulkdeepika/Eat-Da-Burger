 <div class="container">
        <div class="nav justify-content-center">
           <h2>Eat-Da-Burger</h2>
        </div>
        <div class="row justify-content-center">
                <img class="shadow" src="/assets/img/burger.png">
        </div>
        <div class="row">
            <div class="col-md-4">
                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                            <li class="yetToDevour-burgers-list-item">
                                <p style="display: inline-block" class="yetToDevour-burgers badge badge-success shadow">{{id}}   {{burger_name}}</p>
                                <button style="display: inline-block;"class="devour-btn btn btn-sm btn-danger shadow" data-id="{{id}}">Devour it!</button>
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>

            <div class="col-md-4">
                <form id="burger-input-form">
                    <input id="burger-name" class="shadow" type="text"><br><br>
                    <button id="add-btn" class="shadow" type="submit">Add To List</button>
                </form>
                <div><p id="instruction-text">Enter a burger you wish to eat, and click the 'Add To List' button.</p></div>
            </div>

            <div class="col-md-4">
                 <ul>
                    {{#each burgers}}
                        {{#if devoured}}
                            <li class="devoured-burgers-list-item">
                                <p style="display: inline-block" class="devoured-burgers badge badge-info shadow">{{id}} {{burger_name}}</p>
                                <button style="display: inline-block;"class="delete-btn btn btn-sm btn-danger shadow" data-id="{{id}}">Delete</button>
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>